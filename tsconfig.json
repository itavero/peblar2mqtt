{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    // Inspired by: https://github.com/tsconfig/bases/blob/main/bases/node-lts.json
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
