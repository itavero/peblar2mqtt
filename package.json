{
  "name": "peblar2mqtt",
  "version": "0.0.1",
  "description": "Connect your Peblar EV charger to other systems (like Home Assistant) via MQTT.",
  "homepage": "https://github.com/itavero/peblar2mqtt",
  "repository": "github:itavero/peblar2mqtt",
  "bugs": "https://github.com/itavero/peblar2mqtt/issues",
  "main": "./build/daemon.js",
  "bin": {
    "peblar2mqtt": "./bin/peblar2mqtt"
  },
  "scripts": {
    "build": "rimraf ./build && npm run compile",
    "start:dev": "npx nodemon",
    "start": "npm run build && node build/daemon.js",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "npm run update-git-version && tsc",
    "fix": "gts fix",
    "test": "jest --passWithNoTests",
    "prepack": "npmignore --auto",
    "xxxxxxxx-prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "release": "dotenv release-it --",
    "update-git-version": "npx ts-node git-version.ts"
  },
  "author": {
    "name": "Arno Moonen",
    "url": "https://arno.dev"
  },
  "license": "MIT",
  "devDependencies": {
    "@release-it/keep-a-changelog": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "22.8.6",
    "dotenv-cli": "^7.4.2",
    "gts": "^5.3.1",
    "jest": "^29.7.0",
    "jest-chain": "^1.1.6",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.7",
    "npmignore": "^0.3.1",
    "openapi-typescript": "^7.4.2",
    "release-it": "^17.10.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@astronautlabs/mdns": "^1.0.10",
    "@fsmoothy/core": "^1.4.0",
    "@types/lodash": "^4.17.13",
    "axios": "^1.7.7",
    "lodash": "^4.17.21",
    "mqtt": "^5.10.1",
    "openapi-fetch": "^0.12.2",
    "yaml": "^2.6.0"
  },
  "publishConfig": {
    "ignore": [
      "src/",
      "test/",
      ".vscode/",
      "tsconfig.json",
      "nodemon.json",
      ".*",
      "*.ts",
      "!build/src/*",
      "**/*.js.map"
    ]
  }
}
